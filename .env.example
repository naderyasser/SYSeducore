# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# WhatsApp Settings (UltraMsg API)
# ========================================
# Get your credentials from: https://ultramsg.com/
ULTRAMSG_INSTANCE_ID=your-instance-id
ULTRAMSG_TOKEN=your-ultramsg-token

# ========================================
# Notification Settings
# ========================================
NOTIFICATION_METHOD=whatsapp
ENABLE_FIRST_MONTH_STRICT_PAYMENT=True

# Cost Tracking
WHATSAPP_COST_PER_MESSAGE=0.05
WHATSAPP_MONTHLY_BUDGET=500
WHATSAPP_CURRENCY=EGP

# Rate Limiting (per parent)
MAX_MESSAGES_PER_HOUR=5

# Retry Configuration
MAX_NOTIFICATION_RETRIES=3
RETRY_DELAY_MINUTES=5

# Scheduled Tasks (Celery Beat)
DAILY_PAYMENT_REMINDER_TIME=18:00
NOTIFICATION_CLEANUP_DAYS=180

# GLM-4 API (if needed)
GLM4_API_KEY=your_glm4_api_key
GLM4_API_URL=https://api.glm4.example.com

# Rate Limiting
RATELIMIT_ENABLE=True
